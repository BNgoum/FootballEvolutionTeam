<h1 style="margin-bottom: 30px;">Liste des joueurs</h1> 

<p> <a href="<%= new_joueur_path %>" class="btn btn-success" style="margin: 23px 0 0 15px;">Recruter un joueur</a></p>



<div class="row">
	<% @joueurs.each do |joueur| %>
		<div class="col-lg-3">
			<div class="thumbnail" style="margin-bottom: 30px;">
				<a href="<%= joueur_path(joueur.id) %>"><%= image_tag joueur.image.url, :class => "img_joueurs" %></a>
				<p class="text-center">
					<span class="badge text-center">
						<% if joueur.prix %>
							<%= joueur.prix %> €
						<% else %>
							Non renseigné
						<% end %>
					</span>
				</p>
				<p class="text-center"><%= link_to 'ACHETER', acheter_joueur_path(joueur.id), :class => "btn btn-success btn-lg" %></p>
				<% if user_signed_in? %>
					<a href="<%= edit_joueur_path(joueur.id) %>" class="btn btn-warning">Editer</a>
					<a href="<%= joueur_path(joueur.id) %>" class="btn btn-danger" data-confirm="Êtes-vous sûr de rompre le contrat de ce joueur ?" data-method="DELETE">Rompre contrat</a>
				<% end %>
			</div>
		</div>
	<% end %>
</div>

<%= will_paginate @joueurs, previous_label: "<", next_label: ">", renderer:BootstrapPagination::Rails %>

	  



