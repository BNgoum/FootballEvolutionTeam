<h1>Modifier mon équipe</h1>

<%= form_for @equipe_perso, html: { multipart: true } do |f| %>
	<div class="form-group">
		<label>Nom d'équipe </label>
  		<%= f.text_field :nameteam, class: 'form-control' %>

  		<label>nametrainer </label>
  		<%= f.text_field :nametrainer, class: 'form-control' %>

  		<label>pays </label>
  		<%= f.text_field :pays, class: 'form-control' %>

  		<label>Logo</label>
	      <%= f.file_field :image %>
  	</div>

  	<div class="form-group">
  		<button type="submit" class="btn btn-warning">Modifier l'équipe</button> | 
      <%= link_to 'Retour', equipe_persos_path, :class => "btn btn-default" %>
  	</div>
<% end %>



